<div class="login-forms-wrapper d-flex flex-wrap justify-content-center">
        <form class="login-form d-flex flex-column align-items-center text-center mx-5 mb-5">
                <h4 class="mb-3">Log in</h4>
                
                <label for="email-login">Email</label>
                <input type="text" id="email-login" placeholder="user@email.com" />

                <label for="password-login">Password</label>
                <input type="password" id="password-login" placeholder="password" />

                <button type="submit" class="btn btn-primary mt-2">Login</button>
        </form>


        <form class="signup-form d-flex flex-column align-items-center text-center mx-5">
                <h4 class="mb-3">Sign up</h4>

                <label for="username-signup">Username</label>
                <input type="text" id="username-signup" placeholder="username123" />
            
                <label for="email-signup">Email</label>
                <input type="text" id="email-signup" placeholder="user@email.com" />

                <label for="password-signup">Password</label>
                <input type="password" id="password-signup" placeholder="password" />

                <button type="submit" class="btn btn-primary mt-2">Sign up</button>
        </form>
</div>


<script src="/javascript/user/login.js"></script>
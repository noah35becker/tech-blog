
<h3>Welcome, {{user.username}}</h3>

<div class="new-post-wrapper">
    <button type="button" class="new-post-btn btn btn-primary">New post</button>
</div>

<div class="posts-wrapper">
    {{#each user.posts as |post|}}
        {{>post-info post=post currentUserId=../currentUserId showUsernames=false linkedTitle=true}}
    {{/each}}
</div>

<div class="update-user-info-wrapper">
    <button id="update-password-dashboard-btn" type="button" class="btn btn-primary">Update password</button>
    <button id="update-username-dashboard-btn" type="button" class="btn btn-primary">Update username</button>
    <button id="update-email-dashboard-btn" type="button" class="btn btn-primary">Update email</button>
    <button id="delete-account-dashboard-btn" type="button" class="btn btn-primary">Delete account</button>
</div>

<script src="/javascript/post/new.js"></script>
<script src="/javascript/user/dashboard-btns.js"></script>

<article class="post" post-id="{{id}}">
    <header>
        {{#if linkedTitle}}
            <a href="/post/{{id}}">
                <h5 class="title">{{title}}</h5>
            </a>
        {{else}}
            <h5 class="title">{{title}}</h5>
        {{/if}}

        {{#if postedByCurrentUser}}
            <button class="edit-post-btn btn btn-primary">Edit</button>
            <button class="delete-post-btn btn btn-primary">Delete</button>
        {{/if}}
    </header>

    <p class="content">{{content}}</p>

    <div class="meta">
        {{#if showUsernames}}
            Posted by: {{user.username}} |&nbsp;
        {{/if}}
        
        {{#if updatedAt}}
            Updated at: {{updatedAt}}
        {{else}}
            Created at: {{createdAt}}
        {{/if}}
    </div>

    {{#if postedByCurrentUser}}
        <script src="/javascript/update-post-info/delete.js"></script>
    {{/if}}
</article>